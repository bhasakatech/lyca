<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Lyca Join and Recharge Section"
          sling:resourceType="cq/gui/components/authoring/dialog">

    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">

        <items jcr:primaryType="nt:unstructured">

            <!-- LEFT TAB -->
            <joinLycaTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Join Lyca"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">

                    <leftHeading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Left Heading (e.g. Join Lyca today â†’)"
                        name="./leftHeading"/>

                    <leftSubText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Sub Text"
                        name="./leftSubText"/>

                    <!-- JOIN FEATURES MULTIFIELD -->
                    <joinFeatures
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        fieldLabel="Join Features"
                        composite="{Boolean}true">

                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">

                                <featureTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Feature Label (e.g. Plans)"
                                    name="./featureTitle"/>

                                <featureIcon
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="SVG Icon Path"
                                    rootPath="/content/dam"
                                    name="./featureIcon"/>

                            </items>
                        </field>
                    </joinFeatures>

                </items>
            </joinLycaTab>

            <!-- RIGHT TAB -->
            <existingUserTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Already with Lyca?"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">

                    <rightHeading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Right Heading (e.g. Already with Lyca?)"
                        name="./rightHeading"/>

                    <!-- Action Buttons -->
                    <rechargeLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Recharge Button Label"
                        name="./rechargeLabel"/>

                    <rechargeLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Recharge Link"
                        name="./rechargeLink"/>

                    <renewLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Renew Button Label"
                        name="./renewLabel"/>

                    <renewLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Renew Link"
                        name="./renewLink"/>

                    <!-- Phone Input -->
                    <countryCode
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Country Code (e.g. +1)"
                        name="./countryCode"/>

                    <phonePlaceholder
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Phone Input Placeholder"
                        name="./phonePlaceholder"/>

                    <proceedLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Proceed Button Label"
                        name="./proceedLabel"/>

                    <!-- App Download -->
                    <appText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="App Instruction Text"
                        name="./appText"/>

                    <appLinkLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="App Link Label"
                        name="./appLinkLabel"/>

                    <appLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="App Link URL"
                        name="./appLink"/>

                </items>
            </existingUserTab>

        </items>
    </content>
</jcr:root>
