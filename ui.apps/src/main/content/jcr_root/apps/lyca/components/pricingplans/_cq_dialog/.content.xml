<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Pricing Plans"
          sling:resourceType="cq/gui/components/authoring/dialog">

    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">

        <items jcr:primaryType="nt:unstructured">

            <!-- ⭐ GENERAL TAB -->
            <general
                jcr:primaryType="nt:unstructured"
                jcr:title="General"
                sling:resourceType="granite/ui/components/coral/foundation/container">

                <items jcr:primaryType="nt:unstructured">

                    <heading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Main Heading"
                        name="./heading"/>

                    <!-- Toggle Labels -->
                    <toggleLeftLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Toggle Left Label (e.g. 30-Day Plan)"
                        name="./toggleLeftLabel"/>

                    <toggleRightLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Toggle Right Label (e.g. 12-Month Plan)"
                        name="./toggleRightLabel"/>

                    <!-- Bottom CTA -->
                    <findPlanLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Find Plan Button Text"
                        name="./findPlanLabel"/>

                    <findPlanLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        rootPath="/content"
                        fieldLabel="Find Plan Button Link"
                        name="./findPlanLink"/>

                    <viewAllLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="View All Plans Button Text"
                        name="./viewAllLabel"/>

                    <viewAllLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        rootPath="/content"
                        fieldLabel="View All Plans Button Link"
                        name="./viewAllLink"/>

                </items>
            </general>

            <!-- ⭐ PLANS TAB -->
            <plans
                jcr:primaryType="nt:unstructured"
                jcr:title="Plan Cards"
                sling:resourceType="granite/ui/components/coral/foundation/container">

                <items jcr:primaryType="nt:unstructured">

                    <planItems
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="Add Pricing Plans">

                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">

                            <items jcr:primaryType="nt:unstructured">

                                <planName
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Plan Name (e.g. Starter, Essential)"
                                    name="./planName"/>

                                <planPrice
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Plan Price (e.g. $10.00)"
                                    name="./planPrice"/>

                                <planPeriod
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Plan Period (e.g. /Month)"
                                    name="./planPeriod"/>

                                <planDuration
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Plan Duration (e.g. 30GB Monthly Plan)"
                                    name="./planDuration"/>

                                <!-- MULTIFIELD FEATURES -->
                                <planFeatures
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldLabel="Plan Features">

                                    <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        name="./feature"/>
                                </planFeatures>

                                <!-- POPULAR BADGE -->
                                <planHighlight
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldLabel="Mark as Popular Plan?"
                                    name="./planHighlight"
                                    value="true"/>

                                <!-- CTA -->
                                <ctaLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="CTA Button Text"
                                    name="./ctaLabel"/>

                                <ctaLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="CTA Button Link"
                                    rootPath="/content"
                                    name="./ctaLink"/>

                            </items>
                        </field>
                    </planItems>
                </items>
            </plans>

        </items>
    </content>
</jcr:root>
